fn main() {
   let arr = [0, 1, 2, 3, 4];

   println!("{}", arr[ ..  ]); // [0, 1, 2, 3, 4]
   println!("{}", arr[ .. 3]); // [0, 1, 2      ]
   println!("{}", arr[ ..=3]); // [0, 1, 2, 3   ]
   println!("{}", arr[1..  ]); // [   1, 2, 3, 4]
   println!("{}", arr[1.. 3]); // [   1, 2      ]
   println!("{}", arr[1..=3]); // [   1, 2, 3   ]
}
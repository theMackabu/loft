fn fizzbuzz(n: i32) -> str {
   if n <= 0 {
      return "";
   }

   let mut result = fizzbuzz(n - 1);
      
   if !result.is_empty() {
      result.push("\n");
   }

   result.push(match (n % 3, n % 5) {
      (0, 0) => "FizzBuzz",
      (0, _) => "Fizz",
      (_, 0) => "Buzz",
      (_, _) => n.as_str(),
   });
   
   return result;
}

fn main() {
   println!("\nrecursive");
   println!("{}", fizzbuzz(30));
}
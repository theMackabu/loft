struct Triangle {
   base: f64, 
   height: f64,
   info: Info
}

struct Info {
   id: u8,
   name: &str, 
}

impl Info {
   fn get_name(&self) -> &str {
      self.name
   }
   
   fn set_name(&mut self, name: &str) {
      self.name = name;
      io::println(self);
   }
}

impl Triangle {
   fn new(base: f64, height: f64, name: &str, id: u8) -> Self {
      Self { base, height, info: Info { name, id } }
   }
   
   fn display(&mut self) {         
      // self.set_base(1000);
      // io::println(self);
      // 
      // self.info.set_name("third");
      io::println(self);
   }
   
   fn set_base(&mut self, base: i32) {
      self.base = base;
      io::println(self);
   }
}

fn main() {
   let mut trig1 = Triangle::new(10.7, 5.3, "first", 1);
   
   // // works when even trig1 isnt mut
   trig1.set_base(100000);
   trig1.info.set_name("third");
 
   trig1.display();

   io::println(trig1);
}
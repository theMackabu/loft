struct Triangle {
   base: f64, 
   height: f64,
   info: Info
}

struct Info {
   id: u8,
   name: &str, 
}

impl Info {
   fn get_name(&self) -> &str {
      self.name
   }
   
   fn set_name(&mut self, name: &str) {
      self.name = name;
      
      io::print("set_name (self for info): ");
      io::println(self);
      io::println("");
   }
}

impl Triangle {
   fn new(base: f64, height: f64, name: &str, id: u8) -> Self {
      Self { base, height, info: Info { name, id } }
   }
   
   fn display(&self) {      
      io::println("called self.display():\n");
      
      io::print(" - self.base: ");
      io::println(self.base);
      io::println("");
      
      io::print(" - self.height: ");
      io::println(self.height);
      io::println("");
      
      io::print(" - self.info.id: ");
      io::println(self.info.id);
      io::println("");
      
      io::print(" - self.info.get_name(): ");
      io::println(self.info.get_name());
      io::println("");
   }
   
   fn set_base(&mut self, base: i32) {
      self.base = base;
      
      io::print("set_base (self for triangle): ");
      io::println(self);
      io::println("");
   }
   
   fn change_stuff(&mut self) {
      self.set_base(20);
      self.info.set_name("fourth");
   }
}

fn main() {
   let mut trig1 = Triangle::new(10.7, 5.3, "first", 1);
   
   let mut trig2 = Triangle { 
      base: 9.0, 
      height: 1.4, 
      info: Info { 
         name: "second", 
         id: 2 
      }
   };

   
   trig1.display();
   
   trig2.change_stuff();
   trig2.display();
}
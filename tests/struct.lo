struct Triangle {
   base: f64, 
   height: f64,
   info: Info
}

struct Info {
   id: u8,
   name: &str, 
}

impl Info {
   fn get_name(&self) -> &str {
      self.name
   }
   
   fn set_name(&mut self, name: &str) {
      self.name = name;
      println!("set_name (self for info): {self}\n");
   }
}

impl Triangle {
   fn new(base: f64, height: f64, name: &str, id: u8) -> Self {
      Self { base, height, info: Info { name, id } }
   }
   
   fn display(&self) {      
      println!("called self.display():\n");
      println!(" - self.base: {}\n", self.base);
      println!(" - self.height: {}\n", self.height);
      println!(" - self.info.id: {}\n", self.info.id);
      println!(" - self.info.get_name() {}\n", self.info.get_name());
   }
   
   fn set_base(&mut self, base: i32) {
      self.base = base;
      println!("set_base (self for triangle): {self}\n");
   }
   
   fn change_stuff(&mut self) {
      self.set_base(20);
      self.info.set_name("fourth");
   }
}

fn main() {
   let mut trig1 = Triangle::new(10.7, 5.3, "first", 1);
   
   let mut trig2 = Triangle { 
      base: 9.0, 
      height: 1.4, 
      info: Info { 
         name: "second", 
         id: 2 
      }
   };
   
   trig1.display();
   trig2.change_stuff();
   trig2.display();
}
fn test_assignment(val: &mut i32) -> &mut i32 {
   *val += 3;
   
   test_eq!(val, 8);
   return val;
}

fn test_inner() {
   let mut val = "outer";
   
   if val == "outer" {
      val = "inner";
   }
   
   test_eq!(val, "inner");
}

fn test_tuple() {
   let (mut a, mut b) = (1, 1);
   
   a = 2;
   b = 3;
   
   test_eq!(a, 2);
   test_eq!(b, 3);
}

fn main() {
   let mut value = 5;

   test_eq!(value, 5);

   let val2 = test_assignment(&mut value);
   *val2 += 10;
      
   test_eq!(value, 18);
      
   test_inner();
   test_tuple();
}

fn test_for() {
   for i in 0..10 {
      println!("index: {i}");
   }
   
   let strs = ["cats", "dogs"];
   for text in strs {
      println!("I like {}.", text);
   }
   
   for i in 0..10 {
      if i % 2 == 0 {
         continue;
      }
      println!("{i}");
   }
}


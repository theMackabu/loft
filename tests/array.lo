fn analyze(slice: [i32]) {
   io::print("First element of the slice: ");
   io::println(slice[0]);
    
   io::print("The slice has ");
   io::print(slice.len());
   io::println(" elements.");
}

fn main() {   
   let mut s: [i32] = [1, 2, 3];
   let xs: [i32; 5] = [1, 2, 3, 4, 5];
   let ys: [&str; 500] = [":3"; 500];

   s[0] += 8;
   
   analyze(s);
   analyze(xs);
   analyze(ys[1 .. 4]);

   match xs.get(1) {
      Some(xval) => io::println(xval),
      None => io::println("nope"),
   }
}